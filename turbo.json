{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build:mesh", "^build:apps"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "build:apps": {
      "dependsOn": ["^build:apps"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "build:mesh": {
      "dependsOn": ["^build:mesh"],
      "outputs": ["dist/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "dependsOn": ["^clean"],
      "cache": false
    },
    "prepack:all": {
      "dependsOn": ["^prepack:all"],
      "outputs": ["dist/*.tgz"],
      "cache": false
    }
  }
}
